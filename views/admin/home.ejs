<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Dashboard</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/custom.css">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg bg-white">
                <div class="container">
                    <a class="navbar-brand fw-bold fs-4 text-dark"
                        href="/admin/home">Admin Panel</a>
                    <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="adminNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-4">
                            <li class="nav-item"><a class="nav-link active"
                                    href="/admin/home">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link"
                                    href="/admin/AddUser">Add User</a></li>
                        </ul>
                        <a href="/logout"
                            class="btn btn-outline-secondary">Logout</a>
                    </div>
                </div>
            </nav>
        </header>

        <main class="container py-5">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h1 class="h2 fw-bold text-dark">User Management</h1>
                <a href="/admin/AddUser" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add New User
                </a>
            </div>
            <form action="/admin/home" method="get" class="mb-4">
                <input type="text" name="search" class="form-control" placeholder="Search by name or email..." value="<%= searchQuery || '' %>">
             </form>
            <div class="table-responsive">
                <table class="table align-middle bg-dark rounded p-5">
                    <thead>
                        <tr>
                            <th class="ps-4">Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userdetails.forEach(user => { %>
                        <tr>
                            <td class="ps-4 fw-bold text-primary"><%=
                                user.userName %></td>
                            <td><%= user.email %></td>
                            <td>
                                <span
                                    class="badge <%= user.isAdmin ? 'bg-primary bg-opacity-10 text-primary' : 'bg-success bg-opacity-10 text-success' %>">
                                    <%= user.isAdmin ? 'Admin' : 'User' %>
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a href="/admin/EditUser/<%= user._id %>"
                                    class="text-decoration-none fw-bold me-4">Edit</a>
                                <a href="#"
                                    class="text-danger text-decoration-none fw-bold">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>

                </table>
            </div>
        </main>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>