<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Dashboard</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/custom.css">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg bg-white">
                <div class="container">
                    <a class="navbar-brand fw-bold fs-4 text-dark"
                        href="/admin/home">Panel</a>
                    <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="adminNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-4">
                        <form action="/logout" method="POST"
                            style="display:inline;">
                            <button type="submit"
                                class="btn btn-outline-secondary">Logout</button>
                        </form>
                    </div>
                </div>
            </nav>
        </header>

        <main class="container py-5">
            <% if (deleted) { %>
            <div class="alert alert-success alert-dismissible fade show"
                role="alert">
                User deleted successfully!
                <button type="button" class="btn-close"
                    data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            <% if (created) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                User created successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show"
                role="alert">
                <%= error %>
                <button type="button" class="btn-close"
                    data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <div class="d-flex justify-content-between align-items-center mb-5">
                <h1 class="h2 fw-bold text-dark">User Management</h1>
                <a href="/admin/addUser" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add New User
                </a>
            </div>
            <form action="/admin/home" method="get" class="mb-4">
                <input type="text" name="search" class="form-control"
                    placeholder="Search by name or email..."
                    value="<%= searchQuery || '' %>">
            </form>
            <div class="table-responsive">
                <table class="table align-middle bg-dark rounded p-5">
                    <thead>
                        <tr>
                            <th class="ps-4">Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userdetails.forEach(user => { %>
                        <tr>
                            <td class="ps-4 fw-bold text-primary"><%=
                                user.userName %></td>
                            <td><%= user.email %></td>
                            <td>
                                <span
                                    class="badge <%= user.isAdmin ? 'bg-primary bg-opacity-10 text-primary' : 'bg-success bg-opacity-10 text-success' %>">
                                    <%= user.isAdmin ? 'Admin' : 'User' %>
                                </span>
                                
                            </td>
                            <td class="text-end pe-4">
                                <a href="/admin/EditUser/<%= user._id %>"
                                    class="text-decoration-none fw-bold me-4">Edit</a>
                                <a href="/admin/DeleteUser/<%= user._id %>"
                                    class="badge bg-primary bg-opacity-10 text-danger">
                                   Delete
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>

                </table>
            </div>
        </main>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    <script>
    setTimeout(() => {
        const alert = document.querySelector('.alert');
        if(alert){
            alert.classList.remove('show');
        }
    }, 3000);
</script>

</html>